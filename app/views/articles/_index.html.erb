<div class="row">
  <% @articles.each do |article| %>
  <div class="card text-white bg-light mb-3" style="max-width: 15rem;">
    <div class="card-header">
      <%= link_to article_path(article.id), class: "btn btn-warning btn-block", :style=>"color:#000000;" do %>
      <%= article.title %>
    <% end %></div>
    <div class="card-body">
      <%= attachment_image_tag article, :user_image, size: "160x160", fallback: "no_image.jpg", class:"card-img-top"; %>
    </div>
    <div class="card-footer bg-light">
      <%= attachment_image_tag article.user, :profile_image, size: "40x40", fallback: "user_no_image.png", class:"mt-3 rounded-circle"; %>
    </div>
  </div>
  <% end %>
</div>
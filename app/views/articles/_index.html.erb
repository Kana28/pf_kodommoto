<% @articles.each do |article| %>
<div class="card text-white bg-secondary mb-3" style="max-width: 20rem;">
  <div class="card-header">
    <%= link_to article_path(article.id), class: "btn btn-outline-light btn-block", :style=>"color:#000000;" do %>
    <%= attachment_image_tag article.user, :profile_image, size: "50x50", fallback: "user_no_image.png", class:"mt-3 rounded-circle"; %>
    &emsp;<%= article.title %>
  <% end %></div>
  <div class="card-body">
    <p class="card-text"><%= attachment_image_tag article, :user_image, size: "120x200", fallback: "no_image.jpg", class:"card-img-top"; %></p>
  </div>
</div>
<% end %>
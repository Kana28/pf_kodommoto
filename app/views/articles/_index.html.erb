<div class="row mx-auto">
  <% @articles.each do |article| %>
  <div class="card text-white bg-light mb-3" style="max-width: 13rem;">
    <div class="card-header">

      <% if article.genre_id == 1 %>
        <%= link_to article_path(article.id), class: "btn btn-info btn-block", :style=>"color:#000000;" do %>
          <%= article.title %>
        <% end %>
      <% else %>
        <%= link_to article_path(article.id), class: "btn btn-warning btn-block", :style=>"color:#000000;" do %>
          <%= article.title %>
        <% end %>
      <% end %>

    </div>
    <div class="card-body mx-auto">
      <%= attachment_image_tag article, :user_image, size: "160x140", fallback: "no_image.jpg", class:"card-img-top" %>
    </div>
    <div class="card-footer text-dark bg-light">
      <%= attachment_image_tag article.user, :profile_image, size: "30x30", fallback: "user_no_image.png", class:"mt-3 rounded-circle"; %>
      &emsp;&emsp;
      <i class="far fa-comment-dots comment_size"><%= article.article_comments.count %></i>
      &thinsp;
      <i class="far fa-heart favorite_size"><%= article.favorites.count %></i>
    </div>
  </div>
  <% end %>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-3"></div>

    <div class="col-xs-6">
      <%= form_with model:@genre, local: true do |f| %>
        <br>
        <h5><%= f.label :name, 'ジャンル名編集' %></h5>
        <%= f.text_field :name, class:'form-control' %>
        <br>
        <%= f.submit '編集を保存', class: 'btn btn-primary ' %>
      <% end %>
    </div>
    <div class="col-xs-3"></div>
  </div>
</div>
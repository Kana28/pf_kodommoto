<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= form_with model:@genre, local:true do |f| %>
        <br>
        <h5><%= f.label :name, 'ジャンル名の追加' %></h5>
        <%= f.text_field :name, class:'form-control' %>
        <br>
        <%= f.submit '追加', class: 'btn btn-success btn-block' %>
      <% end %>
    </div>
    <div class="col-xs-9">
      <div class="table">
        <thead>
          <tr>
            <th><p>| ジャンル名</p></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td>
                <%= link_to '編集', edit_genre_path(genre), class: 'btn-sm btn-primary' %>
              </td>
              <td>
                <%= link_to '削除', genre_path(genre), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn-sm btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </div>
    </div>
  </div>
</div>
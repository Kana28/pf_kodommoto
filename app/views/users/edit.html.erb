<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <br>
    <h3><i class="fas fa-user-cog edit"></i> ユーザー情報の編集</h3>
    <% if @user.errors.any? %>
    <div>
      <ul style="color: red">
        <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3><br>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <br>
    <%= form_with model: @user, local:true do |f| %>
      <%= f.label :ニックネーム %>
      <%= f.text_field :name, class: "form-control name" %>
      <br>
      <%= f.label :プロフィール画像 %>
      <%= f.attachment_field :profile_image, class: "form-control-file user_image" %>
      <br>
      <br>
      <%= f.submit '編集する', class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>